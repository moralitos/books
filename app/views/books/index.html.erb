<h2>Books Listing</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ISBN</th>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Date Published</th>
      <th>Unit Cost</th>
      <th>Price</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= d(book.date_published) %></td>
        <td><%= number_to_currency book.unit_cost, :precision => 2 %></td>
        <td><%= number_to_currency book.price, :precision => 2 %></td>
        <td><%= book.category.humanize %></td>
      </tr>
    <% end %>
  </tbody>
</table>
